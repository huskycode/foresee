<% extend 'layout.ect' %>

<% block 'more-js' : %>

<%- js("index") %>

<% end %>
        <!-- Main hero unit for a primary marketing message or call to action -->
    <div class="container-centered">
        <header>
            <h1>Foresee</h1>
        </header>

        <div class="box">
            <div class="row-fluid" id="forms">
                <div class="span12" ng-app="foresee">
                    <h2>Moderator</h2>
                    <form class="form-horizontal" ng-controller="foresee.moderator.LoginCtrl" ng-submit="createRoom()">
                        <input type="text" ng-model="roomName" placeholder="Room name" name="id" class="input-block-level" id="id" autofocus>
                        <div id="mod_message" ng-model="modMsg">{{modMsg}}</div>
                        <button type="submit" class="btn btn-blue pull-right" id="createRoom" name="createRoom">Create Room</button>
                    </form>
                </div>
            </div>
            <hr>
            <section class="row-fluid" id="about">
                <div class="span12" id="about">
                    <h2>What is Foresee?</h2>
                    <p>Foresee helps teams quickly reach a concensus on what needs to be done, how long it will take, and any assumptions made along the way.</p>
                    <p>Estimate. Simple.</p>
                </div>
            </section>
        </div>
